# ---- HOSTINGER-OPTIMIZED REACT SPA ROUTING ----
# Based on research from StackOverflow and Medium articles
# for Hostinger shared hosting compatibility

# Disable MultiViews (critical for Hostinger)
Options -MultiViews

# Primary React Router fallback method
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  DirectoryIndex index.html
  
  # Preserve diagnostic endpoints
  RewriteRule ^deploy-info\.json$ - [L]
  RewriteRule ^diagnostic\.html$ - [L]
  
  # Handle favicon - redirect to actual logo
  RewriteRule ^favicon\.ico$ /images/backgrounds/ELIA%20Favicon.png [L]
  
  # Don't rewrite the main index.html
  RewriteRule ^index\.html$ - [L]
  
  # Don't rewrite files that exist
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  
  # Don't rewrite assets
  RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|svg|woff|woff2|ttf|eot|ico|webp|mp4|webm|json|xml)$ [NC]
  RewriteCond %{REQUEST_URI} !^/diagnostic\.html$
  
  # Redirect everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Backup method for servers without mod_rewrite
<IfModule !mod_rewrite.c>
  FallbackResource /index.html
</IfModule>

# Error document fallback
ErrorDocument 404 /index.html

# MIME types for modern assets
AddType image/webp .webp
AddType image/avif .avif
AddType application/xml .xml
AddType text/xml .xml

# Advanced caching for performance
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Cache control headers with immutable flag for static assets
<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|jpg|jpeg|png|gif|svg|woff|woff2|ttf|eot|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    FileETag None
  </FilesMatch>

  <FilesMatch "\.(html)$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>

  <FilesMatch "\.(xml)$">
    Header set Content-Type "application/xml; charset=utf-8"
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>
</IfModule>